<div>
  <form id="product-form">
    <div class="row">
      <div class="form-group col-md-3">
        <label for="inputTitle" class="form-label">Title</label>
        <input
          type="text"
          name="title"
          class="form-control"
          id="inputTitle"
          placeholder="Title"
          required
        />
        <span class="validity"></span>
      </div>

      <div class="form-group col-md-2">
        <label for="inputPrice" class="form-label">Price</label>
        <input
          type="text"
          name="price"
          inputmode="numeric"
          pattern="\d*"
          class="form-control"
          id="inputPrice"
          placeholder="Price"
          required
        />
        <span class="validity"></span>
      </div>

      <div class="form-group col-md-2">
        <label for="inputStock" class="form-label">Stock</label>
        <input
          type="text"
          name="stock"
          inputmode="numeric"
          pattern="\d*"
          class="form-control"
          id="inputStock"
          placeholder="Stock"
          required
        />
        <span class="validity"></span>
      </div>
    </div>

    <div class="row">
      <div class="form-group col-md-2">
        <label for="inputCode" class="form-label">Code</label>
        <input
          type="text"
          name="code"
          inputmode="numeric"
          pattern="\d*"
          class="form-control"
          id="inputCode"
          placeholder="Code"
          required
        />
        <span class="validity"></span>
      </div>

      <div class="form-group col-md-5">
        <label for="inputThumbnail" class="form-label">Thumbnail</label>
        <input
          type="text"
          name="thumbnail"
          class="form-control"
          id="inputThumbnail"
          placeholder="Thumbnail"
          required
        />
        <span class="validity"></span>
      </div>
    </div>

    <div class="row">
      <div class="form-group col-md-7">
        <label for="inputDescription" class="form-label">Description</label>
        <input
          type="text"
          name="description"
          class="form-control"
          id="inputDescription"
          placeholder="Description"
          required
        />
        <span class="validity"></span>
      </div>
    </div>

    <div class="row-auto my-3">
      <button type="submit" class="btn btn-primary">Crear producto</button>
    </div>

  </form>
</div>