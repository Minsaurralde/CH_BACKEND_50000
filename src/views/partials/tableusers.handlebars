<div class="class='col-md-12 col-lg-8'">
  {{#if hasData}}
    <table class="table table-striped">
      <caption>Listado de usuarios</caption>
      <thead class="table-dark">
        <tr>
          <th scope="col">Id</th>
          <th scope="col">First Name</th>
          <th scope="col">Last Name</th>
          <th scope="col">Email</th>
          <th scope="col">Role</th>
          <th scope="col">Edit</th>
          <th scope="col">Delete</th>
        </tr>
        </tr>
      </thead>
      <tbody id="user-list">
        {{#each user}}
          <tr id="{{this.id}}">
            <td>{{this.id}}</td>
            <td>{{this.first_name}}</td>
            <td>{{this.last_name}}</td>
            <td>{{this.email}}</td>
            <td>
              <select id="inputRole-{{this.id}}" class="form-control" disabled >
                <option selected>{{this.role}}</option>
                <option value="admin">admin</option>
                <option value="user">user</option>
              </select>
            </td>
            <td>
              <i class="bi bi-pencil-fill" onclick="edit('{{this.id}}')"></i>
              <button type="button" class="btn btn-primary d-none" onclick="save('{{this.id}}')">Guardar</button>
            </td>
            <td><i class="bi bi-trash3-fill" onclick="remove('{{this.id}}')"></i></td> 
          </tr>
        {{/each}}
      </tbody>
    </table>
  {{else}}
    <p>No hay usuarios cargados...</p>
  {{/if}}
</div>